      </script>
      <!--If code gets to be ready from any where in the same page we use
          Function then it reads the script tag in any form of order-->
         
         <script>
             //after loading the whole document the gets executed
         $(function()
         {
            $('.btn4').hide();
            $('.btn2').css('font-size','25px');
            $('.btn2').css('color','violet');
            $('.btn6').css('color','blue');
         }) ;
           
      </script>

